<view class="weui-cells__title">我的收藏</view>
<view class="weui-panel weui-media-box">
	<block wx:for="{{products}}" wx:for-index="x" wx:key="x">
		<block wx:for="{{item}}" wx:for-item='product' wx:for-index="y" wx:key="y">
			<navigator url="/pages/store/detail?id={{product.id}}" class=" weui-media-box_appmsg"
				hover-class="weui-cell_active">
				<view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
					<view class="weui-badge">{{cartsPid[product.id]?cartsPid[product.id].num:0}}</view>
					<image class="weui-media-box__thumb" src="{{prefix}}{{product.pictures[0]}}" />
				</view>
				<view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
					<view class="weui-media-box__title">{{product.name}}</view>
					<view class="weui-media-box__desc">{{product.description}}</view>
					<view class="weui-media-box__desc"><label
							class="weui-cell_warn">{{product.price}}{{product.priceUnit}}</label></view>
				</view>
			</navigator>
			<view class="weui-cell__ft">
				<button type="default" size="mini" disabled="{{!cartsPid[product.id].num>0}}" bindtap="subtractCount"
					data-x="{{x}}" data-y="{{y}}">减</button>
				<button type="default" size="mini" disabled="true"><text
						class="weui-cell_warn">{{cartsPid[product.id]?cartsPid[product.id].num:0}}</text></button>
				<button type="default" size="mini" bindtap="addCount" data-x="{{x}}" data-y="{{y}}">加</button>
			</view>
		</block>
	</block>
</view>